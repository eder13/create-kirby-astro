---
import Headline from "./../../atoms/Headline.astro";
import Text from "./../../atoms/Text.astro";
import Container from "./../../structure/Container.astro";

type Props = {
    headline?: string | null;
    headlineSize?: "h1" | "h2" | "h3" | "h4" | "h5";
    text?: string | null;
    style?: string | Record<string, any>;
    class?: string;
    fontSize?:
        | "biggest"
        | "biggerer"
        | "bigger"
        | "big"
        | "large"
        | "normal"
        | "small";
    dangerouslySetText?: boolean;
};

const {
    style,
    headline,
    text,
    headlineSize = "h3",
    class: className,
    fontSize,
    dangerouslySetText,
} = Astro.props;
---

<Container class:list={[!!className && className]} style={style}>
    {
        headline && (
            <Headline
                fontSize={fontSize}
                style={{ marginBottom: "1rem" }}
                size={headlineSize}
                text={headline}
            />
        )
    }
    {text && <Text text={text} dangerouslySetText={dangerouslySetText} />}
</Container>
