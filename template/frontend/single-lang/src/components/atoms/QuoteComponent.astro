---
type Props = {
    quote: string;
    source: string;
};

const { quote, source } = Astro.props;
---

<div class="quote-wrapper p-4 mb-4 rounded">
    <div class="quote-wrapper-inner">
        <i class="quote-icon fa fa-quote-left"></i>
        <div>
            <cite>
                {quote}
            </cite>
        </div>
        <span>{source}</span>
    </div>
</div>

<style>
    .wrapper {
        width: 100svw;
    }

    .quote-wrapper {
        display: flex;
        flex-flow: column nowrap;
        place-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        background: var(--grayscale-1);
    }

    .quote-wrapper-inner {
        display: flex;
        flex-flow: column nowrap;
        justify-content: center;
        height: 100%;
        width: 100%;
        gap: 0.5rem;
    }

    .quote-wrapper-inner cite {
        font-size: var(--fz-normal);
    }

    .quote-wrapper-inner span {
        font-size: var(--fz-smallest);
        color: rgb(103, 98, 96);
    }

    .quote-icon {
        font-size: 1em;
        color: rgb(222, 218, 216);
    }
</style>
